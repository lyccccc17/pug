extends layout

block beforehtml
  - const title = '作品集'

block style
  style
    :sass
      [v-cloak]
        display: none

      #app
        h1
          font-weight: bold
        .works
          column-count: 3
          column-gap: 20px

        .card
          width: 31%
          .detail
            opacity: 0
            position: absolute
            transition: 0.1s
            z-index: 2
            h4, a
              color: #ffffff
          &:before
            background-color: rgba(black, 0.7)
            content: ""
            display: block
            height: 100%
            opacity: 0
            position: absolute
            transition: 0.5s
            width: 100%
            z-index: 1
          &:hover
            .detail, &:before
              display: block
              opacity: 1
      

block content
  include /navbar
  #app.content.container.p-3(v-cloak)
    h1 作品集
    .works.row
      section.card.d-flex.justify-content-center.mb-3(v-for="(work, wId) in works" :key="wId")
        img.card-img-top(:src="`https://i.imgur.com/${work.image}.png`" alt="")
        .detail.align-self-center.d-flex.flex-column.align-items-center
          h4.mb-3 {{ work.text }}
          a.btn.btn-primary(:href="`${work.url}.html`") {{ work.button }}
        .card-footer
          h5.text-center.card-title {{ work.title }}

